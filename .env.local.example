# Environment Configuration
# Copy this file to .env.local and update with your values

# --- LOCAL DEVELOPMENT CONFIGURATION ---
# Set ENVIRONMENT=development for local development

# --- AWS DEPLOYMENT CONFIGURATION ---
# Set ENVIRONMENT=production for AWS deployment

# AWS Configuration
AWS_REGION=region
S3_BUCKET_NAME_LOCAL=your-local-dev-bucket
S3_BUCKET_NAME_PROD=your-local-prod-bucket

# API Authentication
API_KEY=your-api-key-here
REQUIRE_AUTH=true

# Pushover Notifications (optional)
PUSHOVER_TOKEN=your_pushover_api_token
PUSHOVER_USER=your_pushover_user_key
ENABLE_NOTIFICATIONS=false

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=aws
ENABLE_VERBOSE_LOGGING=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
REACT_APP_S3_BUCKET_LOCAL=your-local-dev-bucket
REACT_APP_S3_BUCKET_PROD=your-local-prod-bucket
REACT_APP_API_BASE_URL_LOCAL=http://localhost:8000
REACT_APP_API_BASE_URL_AWS=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com
REACT_APP_S3_REGION=region
REACT_APP_ENVIRONMENT=aws

# --- ENVIRONMENT-SPECIFIC OVERRIDES ---
# Local scripts will reference *_LOCAL variables
# AWS scripts will reference *_PROD variables
