# 7H Stock Analyzer - Environment Configuration
# Copy this file to .env and fill in your credentials

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
S3_BUCKET_NAME=stock-analyzer-your-account

# Pushover Notifications (optional but recommended)
# Get these from: https://pushover.net/
PUSHOVER_TOKEN=your_app_token_here
PUSHOVER_USER=your_user_key_here
ENABLE_NOTIFICATIONS=true

# API Configuration
API_BASE_URL=https://your-api-gateway-url.com

# Analysis Configuration
DEFAULT_PERIOD=6mo
BATCH_SIZE=50
MAX_RETRIES=3

# Notification Thresholds
NOTIFICATION_PRIORITY_THRESHOLD=3

# Performance Configuration
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# Feature Flags
ENABLE_ADVANCED_ANALYSIS=true
ENABLE_FUNDAMENTAL_ANALYSIS=true
ENABLE_PATTERN_RECOGNITION=false

# Development Settings
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# CORS Settings (for local development)
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Cache Settings
ENABLE_CACHE=false
CACHE_TTL=300

# Rate Limiting
ENABLE_RATE_LIMITING=false
RATE_LIMIT_PER_MINUTE=60
